<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="syncfusioncontrolinmaui.CustomControls.CustomTextInputLayout"
             x:Name="Root"
>
  <syncfusion:SfTextInputLayout 
        x:Name="textInputLayout"
        ContainerType="Outlined"
        Hint="{Binding LabelText, Source={x:Reference Root}}">

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="30" />
      </Grid.ColumnDefinitions>

      <!-- TextBox -->
      <Entry 
                x:Name="entryControl"
                Text="{Binding Text, Source={x:Reference Root}, Mode=TwoWay}"
                Placeholder="{Binding Placeholder, Source={x:Reference Root}}"
                Focused="OnEntryFocused"
                Unfocused="OnEntryUnfocused"/>

      <!-- Error Icon -->
      <Image 
                Grid.Column="1"
                Source="error_icon_red.png"
                IsVisible="{Binding HasError, Source={x:Reference Root}}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="End" />
    </Grid>
  </syncfusion:SfTextInputLayout>
</ContentView>
